programa {
  funcao inicio() {
    //Declaração de variaveis
    inteiro dias_trabalhados,horas_trabalhadas,salario_do_funcionario
     
     //Entrda de dados
     escreva("Digite os dias trabalhados pelo funcionário: ")
     leia(dias_trabalhados)
    
    //Definição do salario final do funcionario
    salario_do_funcionario=(25*8)*dias_trabalhados
    
    //Saída do resultado
     escreva("O salário do funcionario é de ",salario_do_funcionario," R$")
  }
}
